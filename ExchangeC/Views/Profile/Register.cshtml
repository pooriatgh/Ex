
@{
    ViewData["Title"] = "Signup";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Gentelella Alela! | </title>

    <!-- Bootstrap -->
    <link href="~/Content/vendor/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/vendor/bootstrap-rtl/dist/css/bootstrap-rtl.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="~/Content/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <!-- NProgress -->
    <link href="~/Content/vendor/nprogress/nprogress.css" rel="stylesheet">
    <!-- Animate.css -->
    <link href="~/Content/vendor/animate.css/animate.min.css" rel="stylesheet">
    <!-- Custom Theme Style -->
    <link href="~/Content/build/css/custom.css" rel="stylesheet">
</head>

<body class="login">
    <div>
        <a class="hiddenanchor" id="signup"></a>
        <a class="hiddenanchor" id="signin"></a>
        <a class="hiddenanchor" id="reset"></a>

        <div class="login_wrapper">
            <div style=" background-color: white; padding: 15px; border-radius: 10px; " class="animate form login_form">
                <section class="login_content">
                    <form>
                        <h1>فرم ورود</h1>
                        <div>
                            <input type="text" class="form-control" placeholder="ایمیل" required="" />
                        </div>
                        <div>
                            <input type="password" class="form-control" placeholder="رمز عبور" required="" />
                        </div>
                        <div>
                            <a class="btn btn-default submit" href="index.html">ورود</a>
                            <a class="reset_pass" href="#reset">رمز ورود را از دست دادید؟</a>
                        </div>

                        <div class="clearfix"></div>

                        <div class="separator">
                            <p class="change_link">
                                جدید در سایت؟
                                <a href="#signup" class="to_register"> ایجاد حساب </a>
                            </p>

                            <div class="clearfix"></div>
                            <br />

                            <div>
                                <img src="~/logo-wallex-v2.svg" />
                                <h1>Citak</h1>
                                <p>©1397 تمامی حقوق محفوظ.</p>
                            </div>
                        </div>
                    </form>
                </section>
            </div>
            <div id="register" style=" background-color: white; padding: 15px; border-radius: 10px;" class="animate form registration_form">
                <section class="login_content">
                    <form>
                        <h1>فرم ثبت نام</h1>
                        <div>
                            <input type="text" class="form-control" placeholder="ایمیل" required="" />
                        </div>
                        <div>
                            <input type="password" class="form-control" placeholder="رمز عبور" required="" />
                        </div>
                        <div>
                            <input type="password" class="form-control" placeholder="تکرار رمز عبور" required="" />
                        </div>
                        <div>
                            <input type="password" class="form-control" placeholder="کد دعوت" required="" />
                        </div>
                        <div>
                            <a class="btn btn-default submit" href="index.html">ثبت نام</a>
                            <a class="reset_pass" href="#reset">رمز ورود را از دست دادید؟</a>
                        </div>

                        <div class="clearfix"></div>

                        <div class="separator">
                            <p class="change_link">
                                در حال حاضر عضو هستید؟
                                <a href="#signin" class="to_register"> ورود </a>
                            </p>

                            <div class="clearfix"></div>
                            <br />

                            <div>
                                <img src="~/Content/logo-wallex-v2.svg" />
                                <h1>Citak</h1>
                                <p>©1397 تمامی حقوق محفوظ.</p>
                            </div>
                        </div>
                    </form>
                </section>
            </div>
            <div id="rest_pass" style=" background-color: white; padding: 15px; border-radius: 10px; " class="animate form rest_pass_form">
                <section class="login_content">
                    <!-- /password recovery -->
                    <form action="index.html">
                        <h1>بازیابی رمز عبور</h1>
                        <div class="form-group has-feedback">
                            <input type="email" class="form-control" name="email" placeholder="ایمیل" />
                            <div class="form-control-feedback">
                                <i class="fa fa-envelope-o text-muted"></i>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-default btn-block">بازیابی رمز عبور </button>
                        <div class="clearfix"></div>

                        <div class="separator">
                            <p class="change_link">
                                جدید در سایت؟
                                <a href="#signup" class="to_register"> ایجاد حساب </a>
                            </p>

                            <div class="clearfix"></div>
                            <br />

                            <div>
                                <h1><i class="fa fa-paw"></i> Gentelella Alela!</h1>
                                <p>©1397 تمامی حقوق محفوظ. Gentelella Alela! یک قالب بوت استرپ 3. حریم خصوصی و شرایط</p>
                            </div>
                        </div>
                    </form>
                    <!-- Password recovery -->
                </section>
            </div>
        </div>
    </div>
</body>
</html>
